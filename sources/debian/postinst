#!/bin/bash
# postinst script for sambaedu-client-windows
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        . /usr/share/sambaedu/includes/config.inc.sh
	. /usr/share/sambaedu/includes/utils.inc.sh
#	SETMYSQL unattended 1 "installation auto windows" 6
#        /usr/share/se3/sbin/update-share.sh -v -d install || true
        sed  "s/__SE3_DOMAIN__/$config_samba_domain/;s/__NETBIOS_NAME__/$config_se4ad_name/;s/__XPPASS__/$config_ldap_admin_passwd/;s/__SE3IP__/$config_se4fs_ip/;s#__URLSE3__#http://admin.${config_domain}#" \
 /var/sambaedu/unattended/install/os/netinst/se3w10-vars.cmd.in > /var/sambaedu/unattended/install/os/netinst/se3w10-vars.cmd
        sed  "s/__XPPASS__/$config_ldap_admin_passwd/" /var/sambaedu/unattended/install/os/netinst/unattend.xml.in > /var/sambaedu/unattended/install/os/netinst/unattend.xml
        sed  "s/__XPPASS__/$config_ldap_admin_passwd/" /var/sambaedu/unattended/install/os/netinst/sysprep-7.xml.in > /var/sambaedu/unattended/install/os/netinst/sysprep-7.xml
        sed  "s/__XPPASS__/$config_ldap_admin_passwd/" /var/sambaedu/unattended/install/os/netinst/sysprep-10.xml.in > /var/sambaedu/unattended/install/os/netinst/sysprep-10.xml
        rm -fr /var/sambaedu/unattended/install/os/netinst/*.txt
        # ajout mise en place de l'iso 
        chown -R www-admin:www-data /var/www/sambaedu/ipxe
        chown -R www-admin:www-data /var/www/sambaedu/tftp
        echo "installation ok"
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
