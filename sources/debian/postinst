#!/bin/bash
# postinst script for sambaedu-client-windows
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        . /usr/share/sambaedu/includes/config.inc.sh
    	. /usr/share/sambaedu/includes/utils.inc.sh
        . /usr/share/debconf/confmodule

# recup des identifiants adminse

        db_get sambaedu/adminse_name
        set_config clients adminse_name "$RET"
        db_get sambaedu/adminse_passwd
        set_config clients adminse_passwd "$RET"
		
		samba-tool user create $config_adminse_name $config_adminse_passwd -H "ldap://${config_domain}" -U "${config_ldap_admin_name}%${config_ldap_admin_passwd}" || true
		samba-tool group addmembers "Domain Admins" $config_adminse_name -H "ldap://${config_domain}" -U "${config_ldap_admin_name}%${config_ldap_admin_passwd}" || true 

	    set_config clients urlse "http://admin.${config_domain}"

# variables pour scripts install auto

        if [ ! -e /var/sambaedu/unattended/install/os/netinst/se4w10-vars.cmd ]; then
            cp -a /usr/share/doc/sambaedu-client-windows/se4w10-vars.cmd.example /var/sambaedu/unattended/install/os/netinst/se4w10-vars.cmd
        fi        
	    write_param /var/sambaedu/unattended/install/os/netinst/se4w10-vars.cmd config_domain
    	write_param /var/sambaedu/unattended/install/os/netinst/se4w10-vars.cmd config_se4ad_name
    	write_param /var/sambaedu/unattended/install/os/netinst/se4w10-vars.cmd config_adminse_name
		write_param /var/sambaedu/unattended/install/os/netinst/se4w10-vars.cmd config_adminse_passwd
		write_param /var/sambaedu/unattended/install/os/netinst/se4w10-vars.cmd config_se4ad_ip
	

#  templates fichiers unattended pour install auto
#  TODO remplacer ceci par un générateur xml en php.

        if [ ! -e /var/sambaedu/unattended/install/os/netinst/unattend.xml ]; then
            gunzip -c /usr/share/doc/sambaedu-client-windows/unattend.xml.example.gz >/var/sambaedu/unattended/install/os/netinst/unattend.xml
        fi        
    	write_param /var/sambaedu/unattended/install/os/netinst/unattend.xml config_adminse_passwd
		write_param /var/sambaedu/unattended/install/os/netinst/unattend.xml config_adminse_name

        if [ ! -e /var/sambaedu/unattended/install/os/netinst/sysprep-7.xml ]; then
            gunzip -c /usr/share/doc/sambaedu-client-windows/sysprep-7.xml.example.gz > /var/sambaedu/unattended/install/os/netinst/sysprep-7.xml
        fi        
    	write_param /var/sambaedu/unattended/install/os/netinst/sysprep-7.xml config_adminse_passwd
		write_param /var/sambaedu/unattended/install/os/netinst/sysprep-7.xml config_adminse_name

        if [ ! -e /var/sambaedu/unattended/install/os/netinst/sysprep-10.xml ]; then
            gunzip -c /usr/share/doc/sambaedu-client-windows/sysprep-10.xml.example.gz > /var/sambaedu/unattended/install/os/netinst/sysprep-10.xml
        fi        
    	write_param /var/sambaedu/unattended/install/os/netinst/sysprep-10.xml config_adminse_passwd
		write_param /var/sambaedu/unattended/install/os/netinst/sysprep-10.xml config_adminse_name


# ajout mise en place de l'iso 
        chown -R www-admin:www-data /var/www/sambaedu/ipxe
        chown -R www-admin:www-data /var/www/sambaedu/tftp
        echo "installation ok"
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
